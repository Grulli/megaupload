<center><p id="notice"><%= notice %></p></center>

<div class="event_view_header"><center><h1 id="event-name-heading" class="form-signin-heading"><%= @event.name %></h1>(<%= link_to 'Editar', edit_event_path(@event) %>)</center></div>


<!-- <div class="event_view_header"><center><h1 class="form-signin-heading"><%= @event.name %></h1>(<%= link_to 'Edit', edit_event_path(@event) %>)</center></div> -->
<center>
<p>
  <b>Fecha L&iacute;mite:</b>
  <%= @event.end_date %>
</p>

<p>
  <b>Tipo de Archivo:</b>
  <%= @event.file_type %>
</p>
</center>
<!-- Table of users go here -->
<% if @event.up_files.empty? %>
<center><p> &iexcl;No tienes invitados! </p></center>
<% else %>
<div class="guests-table">
<table class="table table-bordered table-hover">
  <tr>
    <th>Email</th>
    <th>Archivo</th>
  </tr>

<% @event.up_files.each do |up_file| %>
  <tr>
    <td><%= up_file.mail %></td>
    <% if !up_file.upload_file_file_size %>
    <td><p> &iexcl;Sin archivo! </p></td>
    <% else %>
    <td><%= link_to 'Archivo', up_file.upload_file.url %></td>
    <% end %>   </tr>
<% end %>
</table>
</div>
<% end %>