<% if @up_file.upload_file_file_size %>

	<h1>A file has already been uploaded!</h1>
	<p>Please contact <%= @up_file.event.user.mail %> for help </p>

<% else %>

	<h1>Upload you file</h1>
	
	<%= form_for @up_file, :html => { :multipart => true } do |f| %>
	
		<div class="field">
			<%= f.label :upload_file %><br />
			<%= f.file_field :upload_file %>
		</div>
	
		<div class="actions">
			<%= f.submit %>
		</div>
	
	<% end %>
	
<% end %>