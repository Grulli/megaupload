<center>
<% if flash[:error] %>
		<p id="warning"><%= flash[:error] %></p>
<% end %>
</center>
<% if !session[:user_id] %>
<div class="facebook-login">
        <a class="btn-large btn btn-custom" href="/facebook">f |	Login with Facebook</a>
	</div>
<div class="container">

     <%= form_for(User.new, :url => '/', :class => 'new_user') do |f| %>
     <h2 class="form-signin-heading">Please sign in</h2>
     <input type="text" name="mail" class="input-block-level" id="mail" placeholder="Email address">
     <input type="password" name="password" id="password" class="input-block-level" placeholder="Password">
	 <%= f.submit "Login" , :name => "commit", :class => "btn btn-large btn-primary" %><%= f.submit "Sign Up" , :name => "commit", :class => "btn btn-large btn-primary" %>
 	 <% end %>
    </div>
<% else %>
	<% @events = Event.find_all_by_user_id(session[:user_id]) %>
	<%= render 'events/index' %>
<% end %>